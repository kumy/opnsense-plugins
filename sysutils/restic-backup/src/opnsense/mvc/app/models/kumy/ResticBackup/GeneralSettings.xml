<model>
    <mount>//system/backup/restic/general</mount>
    <description>OPNsense Restic Backup General Settings</description>
    <version>0.0.0</version>
    <items>
        <enabled type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </enabled>
        <cronjob type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </cronjob>
        <onchange type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </onchange>
        <UpdateCron type="ModelRelationField">
            <Model>
                <queues>
                    <source>OPNsense.Cron.Cron</source>
                    <items>jobs.job</items>
                    <display>description</display>
                    <filters>
                        <origin>/ResticBackup/</origin>
                    </filters>
                </queues>
            </Model>
            <ValidationMessage>Related cron not found.</ValidationMessage>
            <Required>N</Required>
        </UpdateCron>
        <paths>
            <config type="BooleanField">
                <default>1</default>
                <Required>N</Required>
            </config>
            <rrd type="BooleanField">
                <default>0</default>
                <Required>N</Required>
            </rrd>
            <dhcpleases type="BooleanField">
                <default>0</default>
                <Required>N</Required>
            </dhcpleases>
        </paths>
        <repositorypassword type="TextField">
            <Required>Y</Required>
        </repositorypassword>
        <expunge>
            <forget type="BooleanField">
                <default>0</default>
                <Required>N</Required>
            </forget>
            <prune type="BooleanField">
                <default>0</default>
                <Required>N</Required>
            </prune>
            <options type="TextField">
                <Required>N</Required>
            </options>
        </expunge>
        <advanced>
            <no_cache type="BooleanField">
                <default>1</default>
            </no_cache>
            <cache_dir type="TextField" />
            <insecure_tls type="BooleanField" />
            <cleanup_cache type="BooleanField" />
            <compression type="OptionField">
                <default>default</default>
                <OptionValues>
                    <default value="">default (auto)</default>
                    <auto>auto</auto>
                    <off>off</off>
                    <max>max</max>
                </OptionValues>
            </compression>
            <http_user_agent type="TextField" />
            <retry_lock type="TextField" />
            <no_extra_verify type="BooleanField" />
            <limit_download type="IntegerField" />
            <limit_upload type="IntegerField" />
            <stuck_request_timeout type="TextField" />
        </advanced>
    </items>
</model>
